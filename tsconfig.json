{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",                               
    "rootDir": "./src",                                  
    "outDir": "./dist", 
    "esModuleInterop": true,                            
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,                                      
    "baseUrl": "./src",
    "types": ["node", "express"], // explicitly include node and express types
    "typeRoots": [
      "./node_modules/@types" // ensure TypeScript looks for types here
    ],
    "paths": {
      "@configs": ["./configs/index.ts"],
      "@constants": ["./constants/index.ts"],
      "@libs": ["./libs/index.ts"],
      "@models": ["./models/index.ts"],
      "@routes": ["./routes/index.ts"],
      "@services": ["./services/index.ts"],
      "@tests": ["./tests/index.ts"],
      "@types": ["./types/index.ts"],
      "@utils": ["./utils/index.ts"],
    },

    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules",
  ],
}
